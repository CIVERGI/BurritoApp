<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    >

    <TextView
        android:id="@+id/tv_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nombre_burrito"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@id/btn_mas"
        android:layout_toLeftOf="@id/btn_mas"
        android:textAllCaps="true"
        android:layout_alignBaseline="@id/tv_cant"
        android:textStyle="bold"
        android:textSize="18dp"

        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/tv_descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="descripcion_del_producto"
        android:paddingBottom="5dp"
        android:layout_below="@id/btn_mas"
        android:textStyle="normal"
        android:textSize="14dp"

        android:focusable="false"
        android:clickable="false"
        />


        <Button
            android:layout_marginVertical="5dp"
            android:id="@+id/btn_mas"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="+"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/tv_cant"
            android:background="@drawable/button_listview"

            android:focusable="false"
            android:clickable="false"/>

        <TextView
            android:id="@+id/tv_cant"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="cant"
            android:gravity="center"
            android:layout_alignBottom="@id/btn_menos"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@id/btn_menos"

            android:focusable="false"
            android:clickable="false"/>

        <Button
            android:layout_marginVertical="5dp"
            android:id="@+id/btn_menos"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="-"
            android:textStyle="bold"
            android:background="@drawable/button_listview"

            android:focusable="false"
            android:clickable="false"/>


</RelativeLayout>

<!-- Se agrego:

    android:focusable="false"
    android:clickable="false"

    a cada view anidada para que no robaran el foco del touch.-->