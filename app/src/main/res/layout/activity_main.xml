<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/lv_burritos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_burritos"
        android:layout_alignParentTop="true">
    </ListView>

    <Button
        android:id="@+id/btn_burritos"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="New Burrito!"
        android:onClick="newBurrito"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvBurritos.co"
        android:layout_marginHorizontal="25dp"
        android:elevation="1dp"
        android:textColor="@color/blanco"
        android:layout_marginVertical="15dp"
        android:background="@drawable/button"/>

    <TextView
        android:id="@+id/tvBurritos.co"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        android:text="Coded with ❤ by Burritos.co"
        android:elevation="1dp"
        android:textColor="@color/blanco"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@id/lv_burritos"
        android:elevation="0dp"/>
</RelativeLayout>